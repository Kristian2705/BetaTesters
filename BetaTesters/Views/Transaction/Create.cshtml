@model TransactionServiceModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post" asp-action="CreateCheckoutSession">
			<div class="form-group">
				<label asp-for="Money"></label>
				<input asp-for="Money" class="form-control">
				<span asp-validation-for="Money" class="small text-danger"></span>
			</div>

			<label asp-for="Email" hidden="true"></label>
			<input asp-for="Email" hidden="true" />

			<label asp-for="UserId" hidden="true"></label>
			<input asp-for="UserId" hidden="true" />

			<div class="form-group">
				<label asp-for="Type"></label>
				<select asp-for="Type" class="form-control">
					<option value="@TransactionType.Аddition">@TransactionType.Аddition</option>
					<option value="@TransactionType.Withdrawal">@TransactionType.Withdrawal</option>
				</select>
				<span asp-validation-for="Type" class="small text-danger"></span>
			</div>

			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Check Out" />
			</div>
		</form>
	</div>
</div>