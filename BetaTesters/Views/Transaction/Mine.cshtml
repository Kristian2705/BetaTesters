@model IEnumerable<TransactionViewModel>

@{
    ViewBag.Title = "Made Transactions";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th><label>Session Id</label></th>
                <th><label>Type</label></th>
                <th><label>Amount</label></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td><label>@transaction.SessionId</label></td>
                    <td><label>@transaction.Type</label></td>
                    <td><label>@String.Format("{0:f2}", transaction.Money)</label></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-center">Your currently have no received payments!</h3>
}


